{
	"compilerOptions": {
		"outDir": "./dist/",
		"declaration": true,
		"sourceMap": true,
		"noImplicitAny": false,
		"target": "ES6",
		"module" : "CommonJS",
		"moduleResolution": "Node",
		"jsx": "react",
		"downlevelIteration": true,
		"experimentalDecorators": true
	},
	"exclude": [
		"./dist/", // To avoid error: Cannot write file '/dist/index.d.ts' because it would be overwritten by multiple input files.
	]
}
